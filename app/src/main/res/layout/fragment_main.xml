<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.tetsujin.tt.FragmentMain">
    
    <LinearLayout
        android:id="@+id/AyMain_parent_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
        <!-- 日付(曜日)表示 -->
        <TextView
            android:id="@+id/AyMain_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MM/dd(E)"
            android:textSize="30sp"/>
    
        <!-- ListViewのヘッダー部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="開始時間"
                    android:textSize="15sp" />
        
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="終了時間"
                    android:textSize="15sp" />
    
            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">
        
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="授業名"
                    android:textSize="25sp" />
    
            </LinearLayout>
        </LinearLayout>
    
        <!-- 時間割表示 -->
        <ListView
            android:id="@+id/AyMain_timetable_listview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp" />
    
        <!-- 下部 MEMO欄 -->
        <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEMO欄" />
    
            <EditText
                android:id="@+id/FrgMain_memo_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="90dp"
                android:gravity="top|left"
                android:inputType="textMultiLine|textNoSuggestions"
                android:scrollbars="vertical"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
